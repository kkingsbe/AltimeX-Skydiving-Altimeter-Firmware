#include "led_strip.h"

LedStrip::LedStrip(TIM_HandleTypeDef* _timer)
{
	this->timer = _timer;
}

void LedStrip::progress_bar_single_color(uint8_t num_filled, enum COLOR color)
{
	this->clear();
	if(num_filled > MAX_LED) num_filled = MAX_LED;
	for(uint8_t i = 0; i < num_filled; i++) {
		Set_LED_From_Color_Name(i, color);
	}
}

void LedStrip::clear()
{
	this->clear();
}

void LedStrip::send()
{
	WS2813_Send();
}
