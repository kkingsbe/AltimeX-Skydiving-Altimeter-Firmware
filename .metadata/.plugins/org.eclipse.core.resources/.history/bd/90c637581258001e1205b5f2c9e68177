#include "altimex_serial.h"

void printf(float data, UART_HandleTypeDef* uart)
{
	char charData[20] = {'\0'};
	sprintf(charData, "%f", data);
	println(charData, uart);
}

void printd(double data, UART_HandleTypeDef* uart)
{
	char charData[20] = {'\0'};
	sprintf(charData, "%f", data);
	println(charData, uart);
}

void print(char* data, UART_HandleTypeDef* uart)
{
	uint8_t data_size = sizeof(data);
	HAL_UART_Transmit(&uart, data, sizeof(data), 100);
}

void println(char* data, UART_HandleTypeDef* uart)
{
	print(data, uart);

	char newline[2] = "\r\n";
	print(newline, uart);
}
