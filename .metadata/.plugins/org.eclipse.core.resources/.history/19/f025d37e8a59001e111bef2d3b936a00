#include <usb.h>

static void init(UART_HandleTypeDef* _uart)
{
	STM_USB.uart = uart;
}

static void STM_USB::printf(float data)
{
	char charData[64] = {'\0'};
	sprintf(charData, "%f", data);
	size_t len = strlen(charData);
	println(charData, len, uart);
}

static void STM_USB::printd(double data)
{
	char charData[64] = {'\0'};
	sprintf(charData, "%f", data);
	size_t len = strlen(charData);
	println(charData, len, uart);
}

static void STM_USB::print(char* data, size_t len)
{
	HAL_UART_Transmit(uart, data, len, 100);
}

static void STM_USB::println(char* data, size_t len)
{
	print(data, len, uart);

	char newline[2] = "\r\n";
	print(newline, 2, uart);
}
